<Page
	x:Class="EmpiresOfTheIV.EmpireSelectionPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:EmpiresOfTheIV"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
        
        
		<GridView x:Name="empireSelection_GridView" Margin="0,0,0,0" ScrollViewer.VerticalScrollMode="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Visible"
                  IsItemClickEnabled="True"
			      Loaded="EmpireSelection_GridView_Loaded"
			      ItemClick="EmpireSelection_GridView_Clicked"
				  
				  ItemTemplate="{StaticResource EmpireSelectionDataTemplate}"
				  ItemsPanel="{StaticResource EmpireSelectionItemsPanelTemplate}"
				  ItemContainerStyle="{StaticResource EmpireSelectionItemContainerStyle}"/>
	</Grid>
</Page>
